{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
    <h1 class="mt-0">{{ program.title }}</h1>
        <div class="programShow">
            <div class="textAndSeasons">
            <img src="{{program.poster}}" alt="{{ program.title }} poster">
                <div class="text">
                    <p>{{ program.summary }}</p>
                    <strong>Acteurs :</strong>
                    <p>
                    {% for actor in program.actors %}
                        <a href="{{ path('actor_show', {'id': actor.id}) }}">{{ actor.name }}</a>
                    {% else %}
                    <p>Aucun acteur pour cette série</p>
                    {% endfor %}
                    </p>
                    <p>Catégorie : {{ program.category.name }}</p>

                    <div class="boutonRetour">
                        <a href="{{ path('program_index') }}">
                            Retour à la liste des programmes
                        </a>
                    </div>
                </div>

                <div class="seasons">
                    <p> La liste des saisons :</p>
                    {% for season in program.seasons %}
                    <li>
                    <a href="{{ path("program_show_season", { slug: program.slug, season_id:season.id}) }}">
                    {{season.description}}
                    </a>
                    </li>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}