{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="programShow">
            <h1 class="mt-0">{{ program.title }}</h1>
            <div class="textAndSeasons">
                <div class="text">
                    <p>{{ program.summary }}</p>
                    <p>Catégorie : {{ program.category.name }}</p>

                    <div class="boutonRetour">
                        <a href="{{ path('program_index') }}">
                            Retour à la liste des programmes
                        </a>
                    </div>
                </div>

                <div class="seasons">
                    <p> La liste des saisons :</p>
                    {% for season in program.seasons %}
                    <li>
                    {# <a href="{{ path("program_show_season", { program_id: program.id, season_id:season.number}) }}"> #}
                    {{season.description}}
                    {# </a> #}
                    </li>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}